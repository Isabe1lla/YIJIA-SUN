<script>
  // Functions for Text Manipulation

  function toggleBold() {
    document.execCommand('bold');
  }

  function toggleItalic() {
    document.execCommand('italic');
  }

  function highlightText() {
    document.execCommand('backColor', false, 'yellow');
  }

  function removeHighlight() {
    document.execCommand('removeFormat');
  }

  function changeFontSize(action) {
    const selection = window.getSelection();
    if (!selection.rangeCount) return;
    const range = selection.getRangeAt(0);
    const selectedText = range.extractContents();
    const span = document.createElement('span');
    const parentElement = range.startContainer.parentNode;
    const currentSize = parseInt(window.getComputedStyle(parentElement).fontSize) || 16;
    span.style.fontSize = action === 'increase' ? (currentSize + 2) + 'px' : (currentSize - 2) + 'px';
    span.appendChild(selectedText);
    range.insertNode(span);
  }

  function changeTextColor() {
    const selection = window.getSelection();
    if (!selection.rangeCount) return;
    const range = selection.getRangeAt(0);
    const span = document.createElement('span');
    span.style.color = document.getElementById('colorPicker').value;
    range.surroundContents(span);
  }

  function updateTextColor() {
    changeTextColor();
  }

  function searchContent() {
    const searchTerm = document.getElementById('search').value.toLowerCase();
    const contentSections = document.querySelectorAll('.content-editable');
    contentSections.forEach(section => {
      const text = section.textContent.toLowerCase();
      if (text.includes(searchTerm)) {
        section.style.backgroundColor = 'lightyellow';
      } else {
        section.style.backgroundColor = '';
      }
    });
  }
</script>

